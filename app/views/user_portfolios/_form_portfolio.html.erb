<div class="modal fade" id="portfolio" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".portfolio_header" %></h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @portfolio do |f| %>
          <%= f.input :title, label: t(".title"), class: "form-control" %>
          <%= f.input :url, label: t("users.form_portfolio.url"), class: "form-control" %>
          <%= f.input :description, as: :text, label: t(".description"),
            input_html: {rows: Settings.user_portfolio.textarea_rows, class: "form-control"} %>
          <%= f.input :time, label: t(".made"), class: "form-control datepicker" %>
          <div>
            <%= f.simple_fields_for :images do |image| %>
              <%= render "image_fields", f: image %>
            <% end %>
          </div>
          <div class="new-added-images">
          </div>
          <div class="links links-form-project">
            <%= link_to_add_association f, :images, class: "button button-3d
              button-small button-rounded button-green",
              data: {"association-insertion-node": ".new-added-images"} do %>
              <i class="icon-upload"></i>
              <%= t ".add_image" %>
            <% end %>
          </div>
          <div class="button-modal">
            <%= button_tag type: :submit, class: "button button-circle" do %>
              <%= button_text %>
            <% end %>
            <button type="button"
              class="button button-circle button-3d button-light button-white" data-dismiss="modal">
              <%= t ".close" %>
            </button>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
