<% provide :title, t(".title") %>
<% if !user_signed_in? %>
  <div class="row profile">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="row">
        <div class="col-xs-10 col-sm-10 col-xs-offset-1">
          <h3 class="text-center"><%= t ".login" %></h3>
          <%= form_for :user, url: session_path(:user),
            class: "omb-loginform" do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: "form-control input-no-radius",
                autofocus: true, placeholder: t(".email_address") %>
            </div>

            <span class="help-block"></span>

            <div class="form-group">
              <%= f.password_field :password,
                class: "form-control not-dark input-no-radius",
                autocomplete: "off", placeholder: t(".password") %>
            </div>

            <%= f.submit t(".login"), class: "btn btn-login btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
