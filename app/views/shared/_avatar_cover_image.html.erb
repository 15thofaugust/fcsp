<div class="container">
  <div class="row">
    <div class="col-md-12">
      <article class="show-header-user post header-avatar-edit">
        <div class="cover-image">
          <%= load_user_cover user, class: "img-cover" %>
        </div>
        <%= link_to "#", data: {toggle: "modal", target: "#changeAvatarModal"},
          class: "navbar-brand avatar-user" do %>
          <%= load_user_avatar user, class: "img-avatar" %>
        <% end %>
        <span class="site-name"><b><%= user.name %></b></span>
      </article>
    </div>
  </div>
</div>
