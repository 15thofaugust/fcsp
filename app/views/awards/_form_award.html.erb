<div class="modal fade" id="award" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".award_header" %></h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @award, remote: true do |f| %>
          <%= f.input :name, label: t(".title"), class: "form-control" %>
          <%= f.input :time, label: t(".made"), class: "form-control datepicker" %>
          <div class="button-modal-award">
            <%= button_tag type: :submit, class: "button button-circle" do %>
              <%= button_text %>
            <% end %>
            <button type="button"
              class="button button-circle button-3d button-light button-white" data-dismiss="modal">
              <%= t ".close" %>
            </button>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
