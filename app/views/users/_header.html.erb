<div class="container">
  <div class="row">
    <div class="col-md-12">
      <article class="show-header-user post">
        <div class="cover-image">
          <%= load_user_cover user, class: "img-cover" %>
        </div>
        <a class="navbar-brand avatar-user" href="#" data-toggle="modal"
          data-target="#changeAvatarModal">
          <%= load_user_avatar user, class: "img-avatar" %>
        </a>
        <span class="site-name"><b><%= user.name %></b></span>
        <span class="occupation">
          <i class="fa fa-briefcase"></i>
          <%= @user.info_user_occupation %>
        </span>
        <div class="request-user">
          <% if !user.is_user?(current_user) && user_signed_in?  %>
            <div class="follow-user btn btn-default message-button">
              <%= render "follow_user", user: user %>
            </div>

            <div class="btn btn-default message-button">
              <%= link_to t(".message"), conversations_path(user_id: user),
                remote: true, method: :post %>
            </div>
          <% end %>
        </div>
      </article>
    </div>
  </div>
</div>
<div class="render-form-user-skill-modal"></div>
