<div class="box-task">
  <div class="col-md-2 avatar-task">
    <%= load_user_avatar user %>
  </div>
  <div class="tl-circ-task <%= status_color(task.status)[6..-1] %>"
    class="tooltip" role="tooltip" data-toggle="tooltip"
    title="<%= task.status %>">
  </div>
  <div class="col-md-10 info-detail">
    <div class="title-assignment">
      <div>
        <% if task.task_name.size < Settings.truncate.task_name %>
          <span class="title_course">
        <% else %>
          <span class="title_course" role="tooltip" data-toggle="tooltip" title="<%= task.task_name %>">
        <% end %>
        <%= task.task_name.truncate Settings.truncate.task_name %>
        </span>
      </div>
      <span class="description-text"><%= task.task_description %></span>
      <% if task.task_description.size < Settings.truncate.task_description %>
        <span class="description-text">
      <% else %>
        <span class="description-text" role="tooltip" data-toggle="tooltip" title="<%= task.task_description %>">
      <% end %>
      <%= task.task_description.truncate Settings.truncate.task_description %>
      </span>
    </div>
    <div class="github">
      <i class="fa fa-link"></i>
    </div>
  </div>
</div>
