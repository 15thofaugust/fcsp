 <div class="modal fade" id="user-project-form" role="dialog">
  <div class="modal-dialog">
  <%= simple_form_for @user_project, remote: true,
    html: {id: "edit-user-project-form"} do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".header" %></h4>
      </div>
      <div class="modal-body">
        <%= f.input :title, label: t(".title"), class: "form-control" %>
        <%= f.input :url, label: t(".url"), class: "form-control" %>
        <div class="col_half">
          <%= f.input :start_date, as: :string, input_html: {class: "form-control datepicker"} %>
        </div>
        <div class="col_half col_last">
          <%= f.input :end_date, as: :string,
            input_html: {class: "form-control datepicker"} %>
        </div>
        <div>
          <%= f.input :description, as: :text, label: t(".description"),
            input_html: {rows: Settings.user_portfolio.textarea_rows,
            class: "form-control"} %>
        </div>
      </div>
      <div class="button-portfolio-modal">
        <%= f.submit t(".update"), class: "button button-3d button-rounded button-green" %>
        <button type="button"
          class="button button-3d button-rounded button-white button-light" data-dismiss="modal">
          <%= t ".close" %>
        </button>
      </div>
    </div>
  <% end %>
  </div>
</div>

<%= javascript_include_tag "user_project" %>
