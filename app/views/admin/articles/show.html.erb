<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="post-heading">
        <h1><%= @article.title %></h1>
      </div>
    </div>
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="new-article">
        <%= link_to edit_admin_article_path(@article),
          class: "btn btn-primary btn-circle btn-xl" do %>
          <i class="glyphicon glyphicon-edit"></i>
        <% end %>
        <%= link_to admin_article_path(@article), method: :delete,
          class: "btn btn-danger btn-circle btn-xl" do %>
          <i class="glyphicon glyphicon-trash"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row article-content">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <p><%= @article.content.html_safe %></p>
    </div>
  </div>
</div>
