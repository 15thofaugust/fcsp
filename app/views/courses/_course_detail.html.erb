<ul class="timeline">
  <li>
    <% if course_subject.start_date? %>
      <div class="tldate">
        <%= l course_subject.start_date, format: :format_date_eng %>
      </div>
    <% end %>
  </li>
  <li class="timeline-inverted">
    <div class="tl-circ <%= status_color(course_subject.status)[6..-1] %>"
      class="tooltip" role="tooltip" data-toggle="tooltip"
      title="<%= course_subject.status %>">
    </div>
    <div class="timeline-panel">
      <div class="tl-heading">
        <div class="image-subject">
          <%= image_tag check_language course %>
        </div>
        <div class="title_subject">
          <% if course_subject.subject_name.size < Settings.truncate
                                                           .subject_name %>
            <%= link_to course_subject.subject_name,
              user_course_subject_path(@user.id, @course.id,course_subject.id),
              class: "subject-all", data: {"user-id": @user.id,
                "course-id": course.id, "subject-id": course_subject.id} %>
          <% else %>
            <%= link_to course_subject.subject_name
              .truncate(Settings.truncate.subject_name),
              user_course_subject_path(@user.id, @course.id,course_subject.id),
              class: "subject-all", data: {"user-id": @user.id,
                "course-id": course.id, "subject-id": course_subject.id,
                toggle: "tooltip"}, role: "tooltip",
                title: course_subject.subject_name %>
          <% end %>
        </div>
      </div>
      <div class="tl-body">
        <% if course_subject.subject_description.size < Settings.truncate
                                                                .subject_description %>
          <i>
        <% else %>
          <i role="tooltip" data-toggle="tooltip"
            title="<%= course_subject.subject_description %>">
        <% end %>
        <%= course_subject.subject_description.truncate Settings.truncate
                                                                .subject_description %>
        </i>
      </div>
    </div>
  </li>
  <li>
    <% if course_subject.end_date? %>
      <div class="enddate">
        <%= l course_subject.end_date, format: :format_date_eng %>
      </div>
    <% end %>
  </li>
</ul>
