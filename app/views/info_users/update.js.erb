<% if @info_user.errors[:ambition].any? %>
  $('#edit-ambition-modal').modal('hide')
  $('.modal-backdrop').remove()
  $('#edit-ambition-modal').replaceWith('<%= j render "info_users/edit_ambition_modal" %>')
  $('#edit-ambition-modal').modal('show')
<% else %>
  $('.ambition-content').html('<%= j render "info_users/ambition_content" %>')
  $('#edit-ambition-modal').modal('hide');
<% end %>

