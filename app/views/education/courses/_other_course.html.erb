<div class="col_full bottommargin-lg clearfix">
  <div class="fancy-title title-border">
    <h3><%= t ".other_courses" %></h3>
  </div>
  <% relations.each do |relation| %>
    <div class="col_one_third col_last">
      <div class="ipost clearfix">
        <div class="entry-image">
          <a href="#"><%= load_image relation %></a>
        </div>
        <div class="entry-title">
          <h3><%= link_to relation.name, education_course_path(relation) %></h3>
        </div>
        <ul class="entry-meta clearfix">
          <li><i class="icon-calendar3"></i><%= l relation.start_date, format: :date_month_year_concise %></li>
          <li><i class="icon-calendar3"></i><%= l relation.end_date, format: :date_month_year_concise %></i>
        </ul>
        <div class="entry-content">
          <p><%= truncate relation.detail, length: Settings.courses.truncate_other_course %></p>
        </div>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>
