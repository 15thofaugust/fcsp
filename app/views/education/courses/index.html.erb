<div class="row-course">
  <section id="page-title", class="courses_index">
    <div class="container clearfix">
      <h1><%= t ".courses" %></h1>
      <span>
        <div class="courses-search col-md-6 col-sm-6"><%= t ".show_all_course" %></div>
        <div class="col-md-offset-2 col-md-4 col-sm-6"><%= render "search_form" %></div>
      </span> 
    </div> 
  </section>
  <br />
  <section id="content">
    <div class="content-wrap nopadding">
      <div id="portfolio" class="portfolio portfolio-4 clearfix">
        <%= render @courses %>
      </div>
      <hr/>
      <div id="next-project" class="read-more" align="center">
        <%= link_to_prev_page @courses, t("education.back_page"),
          class: "button button-rounded button-white button-light button-large" %>
        <%= link_to_next_page @courses, t("education.next_page"),
           class: "button button-rounded button-white button-light button-large" %>
      </div>
      <br/>
    </div>
  </section>
</div>
