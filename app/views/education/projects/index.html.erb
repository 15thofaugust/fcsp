<% provide :title, t("education.project.title") %>
<section id="page-title">
  <div class="container clearfix">
    <h1><%= t "education.projects.home.title" %></h1>
    <span><%= t "education.projects.home.description" %></span>
    <ol class="breadcrumb">
      <li><a href="#"><%= t "education.header.home" %></a></li>
      <li class="active"><%= t "education.header.project" %></li>
    </ol>
  </div>

</section>

<div id="page-menu">
  <div id="page-menu-wrap">
    <div class="container clearfix">
      <div class="col-md-2">
        <div class="menu-title">
          <%= t "education.header.project" %>
          <span> <%= t "education.projects.home.filter" %></span>
        </div>
      </div>
      <div class="col-md-10">
        <div class="col-md-4 project-search">
          <input type="text" id="projects-search-txt" class="form-control" placeholder="Enter your search" autofocus>
        </div>
        <div class="col-md-8">
          <nav>
            <ul>
              <li class="<%= default_current_path %>">
                <%= link_to education_projects_path do %>
                  <div><%= t "education.project.show_all" %></div>
                <% end %>
              </li>
              <% array_technique_show, array_technique_hide = split_array(@techniques) %>
              <% array_technique_show.each do |technique| %>
                <li class="<%= current_path?(education_projects_path(technique_name: technique.name)) %>">
                  <%= link_to education_projects_path(technique_name: technique.name) do %>
                    <div><%= technique.name %></div>
                  <% end %>
                </li>
              <% end %>
              <% if array_technique_hide %>
                <li>
                  <a href="#">
                    <%= t "education.projects.more" %>
                    <i class="icon-angle-down"></i>
                  </a>
                  <ul>
                    <% array_technique_hide.each do |technique| %>
                      <li class="<%= current_path?(education_projects_path(technique_name: technique.name)) %>">
                        <%= link_to education_projects_path(technique_name: technique.name) do %>
                          <div><%= technique.name %></div>
                        <% end %>
                      </li>
                    <% end %>
                  </ul>
                </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<section id="content">
  <div class="content-wrap nobottompadding">
    <div id="list-portfolio">
      <div id="portfolio" class="portfolio grid-container portfolio-full portfolio-nomargin clearfix">
        <%= render @projects %>
      </div>
    </div>

    <div id="load-next-posts" class="center">
      <div class="button button-full button-dark center tright">
        <div class="container clearfix">
          <div id="more-project" class="read-more" align="center">
            <%= @total_project %><%= t "education.project.name" %>
            <strong><%= t "education.project.see_more" %></strong> <i class="icon-caret-right style-custom"></i>
          </div>
          <div id="next-project" class="read-more" align="center">
            <%= link_to_next_page @projects, t("education.project.next_page") %>
          </div>
          <div id="back-project" class="read-more" align="center">
            <%= link_to_prev_page @projects, t("education.project.back_page") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="col_one_third nobottommargin">
        <div class="feature-box fbox-center fbox-effect nobottomborder">
          <div class="fbox-icon">
            <a href="#"><i class="icon-th i-alt"></i></a>
          </div>
          <h3><%= @total_project %><%= t "education.project.total_project.title" %><span class="subtitle"><%= t "education.project.total_project.subtitle" %></span></h3>
        </div>
      </div>
      <div class="col_one_third nobottommargin">
        <div class="feature-box fbox-center fbox-effect nobottomborder">
          <div class="fbox-icon">
            <a href="#"><i class="icon-file-text i-alt"></i></a>
          </div>
          <h3><%= t "education.project.platform.title" %><span class="subtitle"><%= t "education.project.platform.subtitle" %></span></h3>
        </div>
      </div>

      <div class="col_one_third nobottommargin col_last">
        <div class="feature-box fbox-center fbox-effect nobottomborder">
          <div class="fbox-icon">
            <a href="#"><i class="icon-thumbs-up i-alt"></i></a>
          </div>
          <h3><%= t "education.project.rate_avg.title" %><span class="subtitle"><%= t "education.project.rate_avg.subtitle" %></span></h3>
        </div>
      </div>
      <div class="clear"></div>
    </div>
    <div class="container clearfix">
      <div class="col_one_third nobottommargin col_last">
        <div class="fslider testimonial" data-animation="slide" data-arrows="false">
          <div class="flexslider">
            <div class="slider-wrap">
              <div class="slide">
                <div class="testi-image">
                </div>
              </div>
              <div class="slide">
                <div class="testi-image">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="col-md-4 project-search">
  <div class="results" id="projects-search-results"></div>
</div>

<%= javascript_include_tag "education/projects" %>
