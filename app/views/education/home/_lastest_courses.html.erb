<div class="section notopmargin notopborder">
  <div class="container clearfix">
    <div class="heading-block center nomargin">
      <h3>Latest Courses</h3>
    </div>
  </div>
</div>
<div class="container clear-bottommargin clearfix">
  <div class="row">
    <% @courses.each do |course|%>
      <div class="col-md-3 col-sm-6 bottommargin">
        <div class="ipost clearfix">
          <div class="entry-image">
            <% if course.images.any? %>
              <%= link_to image_tag(course.images.first.url,
                class: "image_fade"), "#" %>
            <% else %>
              <%=link_to image_tag "/assets/images/magazine/thumb/1.jpg",
                class: "image_fade" %>
            <% end %>
          </div>
          <div class="entry-title">
            <h3><a href="blog-single.html"><%= course.name %></a></h3>
          </div>
          <ul class="entry-meta clearfix">
            <li><i class="icon-calendar3"></i><%= l(course.start_date, format: :date_month_year_concise) %></li>
            <li><a href="blog-single.html#comments"></a></li>
            <li><i class="icon-calendar3"></i><%= l(course.end_date, format: :date_month_year_concise) %></li>
          </ul>
          <div class="entry-content">
            <p><%= course.detail %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
