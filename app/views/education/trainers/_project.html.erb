<article class="portfolio-item pf-media pf-icons">
  <div class="portfolio-image">
    <a href="portfolio-single.html">
      <%= load_image project %>
    </a>
    <div class="portfolio-overlay">
      <%= link_to education_project_path(project), class: "left-icon" do %>
        <i class="icon-eye i-alt"></i>
      <% end %>
      <%= link_to education_project_path(project), method: :delete, class: "right-icon" do%>
        <i class="icon-trash"></i>
      <% end %>
    </div>
  </div>
  <div class="portfolio-desc">
    <h3><%= link_to project.name, education_project_path(project) %></h3>
    <span><%= project.plat_form %></span>
  </div>
</article>
