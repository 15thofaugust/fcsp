<header class="full-header custom-header navbar-fixed-top">
  <div id="header-wrap" class="header-wrap-custom">
    <div class="container-custom clearfix">
      <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>
      <div id="logo" class="logo-custom">
        <%= link_to employer_company_dashboards_path(@company) do %>
          <%= image_tag "/assets/logo-framgia1.png", alt: t("education.logo_alt") %>
        <% end %>
      </div>

      <nav id="primary-menu" class="custom-primary-menu">
        <ul class="list-header-custom">
          <li class="current mega-menu"><%= link_to t(".dashboard"),
            employer_company_dashboards_path(@company) %></li>
          <li class="mega-menu"><%= link_to t(".jobs"), jobs_path %></li>
          <li class="mega-menu"><%= link_to t(".feed"), "#" %></li>
          <li class="mega-menu"><%= link_to t(".tools"), "#" %></li>
        </ul>
      </nav>

      <div id="top-account" class="dropdown top-account">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <i class="icon-user"></i><i class="icon-angle-down"></i></a>
        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown">
          <li class="drop-custom"><%= link_to t(".edit_profile"), "#" %></li>
          <li class="drop-custom"><%= link_to t(".account_info"), "#" %></li>
          <li class="drop-custom">
            <%= link_to t(".company_info"),
              edit_employer_company_path(@company) %>
          </li>
          <li class="drop-custom"><%= link_to t(".setting"), "#" %></a></li>
          <li role="separator" class="divider"></li>
          <li>
            <%= link_to t(".logout"), destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      </div>

    </div>
  </div>
</header>
