<div class="fieldset form-group">
  <div class="col-md-4"><%= f.label :industry %></div>
  <div class="selection">
    <ul class="collection-wrapper">
      <%= f.collection_check_boxes :industry_ids, @industries,
        :id, :name do |industry| %>
        <li>
          <%= industry.check_box %>
          <%= industry.text %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="clearfix"></div>
