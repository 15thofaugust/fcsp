<% provide :title, t(".job") %>
<div class="clearfix" id="jobs-management">
  <h3><%= t ".job_recruitment" %></h3></br>
  <div class="button-create-job">
    <%= link_to t(".create_job"), new_employer_company_job_path(@company),
      class: "btn btn-primary" %>
    <div class="select-job" data-select="<%= params[:select] %>">
      <%= link_to t(".all"), employer_company_jobs_path(select: "all_job"),
        class: "button-job all_job" %>
      <%= link_to t(".open"), employer_company_jobs_path(select: "active"),
        class: "button-job" %>
      <%= link_to t(".close"), employer_company_jobs_path(select: "close"),
        class: "button-job" %>
      <%= link_to t(".draft"), employer_company_jobs_path(select: "draft"),
        class: "button-job draft_job" %>
    </div>
  </div>
  </br>

  <table class="table table-striped custab">
    <thead>
      <th width="40%"><%= t ".title" %></th>
      <th width="10%" class="text-center"><%= t ".status" %></th>
      <th width="10%" class="text-center"><%= t ".candidates" %></th>
      <th width="10%" class="text-center"><%= t ".messages" %> </th>
      <th width="10%" class="text-center"><%= t ".action" %></th>
    </thead>
    <tbody class="jobs-list">
      <%= render "job", jobs: @jobs %>
    </tbody>
  </table>

  <div>
    <%= page_entries_info @jobs %>
  </div>
  <div>
    <%= paginate @jobs %>
  </div>

  <input type="hidden" id="company-id" value="<%= @company.id %>">
</div>
