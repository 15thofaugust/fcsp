<% provide :title, t(".job") %>
<div class="postcontent nobottommargin col_last clearfix">
  <div class="header">
    <h2><%= t ".manage_post" %></h2>
    <div class="collapse navbar-collapse teal">
      <ul class="nav navbar-nav nobottommargin">
        <li class="active"><%= link_to t(".all"), "#" %></li>
        <li class="active"><%= link_to t(".open"), "#" %></li>
        <li class="active"><%= link_to t(".closed"), "#" %></li>
        <li class="active"><%= link_to t(".draft"), "#" %></li>
      </ul>
    </div>
  </div>
  <div class="content">
    <table class="table">
      <th><%= t ".title" %></th>
      <th><%= t ".describe" %></th>
      <th><%= t ".candidates" %></th>
      <th><%= t ".status" %></th>
      <th><%= t ".action" %></th>
      <%= render @jobs %>
    </table>
    <% if @jobs.only_deleted.size > 0 %>
      <hr>
      <h2><%= t ".drafts" %></h2>
      <section>
        <table class="table">
          <th><%= t ".title" %></th>
          <th><%= t ".describe" %></th>
          <th><%= t ".candidates" %></th>
          <th><%= t ".status" %></th>
          <th><%= t ".action" %></th>
          <% @jobs.only_deleted.each do |draft| %>
            <%= render "draft", job: draft %>
          <% end %>
         </table>
      </section>
    <% end %>
  </div>
</div>
